"mpris": {
        "on-scroll-up": "pamixer -i 3",
        "on-scroll-down": "pamixer -d 3",
	//"format": "{player_icon} {title} :: {artist}",
	//"format-paused": "{status_icon} {title} :: {artist}",
	"format": "{player_icon} ::",
	"format-paused": "{status_icon} :: ",
  "max-length":50,
	"player-icons": {
		"default": "üçÉ",
		"mpv": "üéµ"
	},
	"status-icons": {
		"paused": "üç∑"
	},
  "interval":1,
	//"ignored-players": ["musikcube"]
},


 
    "custom/weather" : {
        // shows the current weather and forecast
        "tooltip" : true,
        "format" : "{}",
        "interval" : 3600,
        "exec" : "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type" : "json",
        "on-click": "~/.config/rofi/powermenu/type-1/powermenu.sh"
    },

    "tray": {
        "icon-size": 15,
        "spacing": 10
    },

    "clock": {
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%-",
        "format": "ÔÄó  {:%I:%M:%S %p (%Z)}",
        "format-alt": "ÔÄó  {:%I:%M %p (%Z) ÔÅ≥ %a, %b %e}",
        "tooltip": false,
        "interval": 1,
        "on-click": "hyprctl dispatch togglespecialworkspace z && hyprctl dispatch togglespecialworkspace z",
        "on-click-right": "hyprshot -m region",
        "on-click-middle": "pkill gammastep || gammastep -P -O 4500"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
        "on-click": "hyprctl dispatch togglespecialworkspace",
        "on-click-right": "hyprctl dispatch togglespecialworkspace a",
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },

    "battery": {
        "on-click": "hyprctl dispatch workspace -1",
        "on-click-right": "hyprctl dispatch workspace +1",
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        //"format-alt": "{time} {icon}",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 2",
        "on-scroll-down": "pamixer -d 2",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "Mic: {volume}%",
        "format-source-muted": "Mic: Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },
    
    "temperature": {
        "thermal-zone": 1,
        "format": "{temperatureC}¬∞C Ôãâ",
        "critical-threshold": 70,
        "format-critical": "{temperatureC}¬∞C Ôãá"
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´  {signalStrength}%",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{essid} - {ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
    },

    "bluetooth": {
	    "format": "Ôäî {status}",
	    "format-disabled": "", // an empty format will hide the module
	    "format-connected": "Ôäî {num_connections}",
	    "tooltip-format": "{device_alias}",
	    "tooltip-format-connected": "Ôäî {device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}"
    }
}
