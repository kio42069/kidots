        "method": "pipewire",
        "input_delay": 8,
            "gradient": {
        "type": "horizontal",
        "colors": ["#ff0000", "#ff8000", "#ffff00", "#80ff00", "#00ff00"]
    }
  },

    "hyprland/workspaces": {
